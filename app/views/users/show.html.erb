<section class="col-8 mx-auto mt3 flex">
  <aside class="col-3">
    <%= image_tag "#{@github_user.avatar_url}", class: "profile-pic rounded" %>
    <div class="pt2 pb2">
      <p class="h2 m0 bold"><%= @github_user.name %></p>
      <p class="h3 m0 med-gray"><%= @github_user.nickname %></p>
      <p class="mt3 med-gray"><%= @github_user.bio %></p>
      <div class="border-top flex">
        <%= fa_icon "map-marker", class: "pt2 col-1"%>
        <p class="col-11 pt2 m0 med-gray"><%= @github_user.location %></p>
      </div>
      <div class="mt1 overflow-scroll flex">
        <%= fa_icon "link", class: "col-1" %><div>
        <a class="med-gray col-11" href=<%= @github_user.blog_url %> ><%= @github_user.blog_url %></a></div>
      </div>
    </div>
  </aside>
  <aside class="col-9 inline">
    <div class="pt2 pb2 border-box border-bottom profile-links">
      <div class="">
        <%= link_to "Overview", user_path(current_user), class: "pb2 text-decoration-none" %>
      </div>
      <div class="">
        <%= link_to "Repositories", user_path(current_user), class: "pb2 text-decoration-none" %>
        <span class="counter"><%= @github_user.repositories_count %></span>
      </div>
      <div class="">
        <%= link_to "Stars", user_path(current_user), class: "pb2 text-decoration-none" %>
        <span class="counter"><%= @github_user.stars_count %></span>
      </div>
      <div class="">
        <%= link_to "Followers", user_path(current_user), class: "pb2 text-decoration-none" %>
        <span class="counter"><%= @github_user.followers_count %></span>
      </div>
      <div class="">
        <%= link_to "Following", user_path(current_user), class: "pb2 text-decoration-none" %>
        <span class="counter"><%= @github_user.following_count %></span>
      </div>
    </div>
    <h4>Recent Commits (within the last 7 days)</h4>
    <div class="commits">
      <% @github_user.recent_commits(current_user).each do |commit| %>
        <ul>
          <li><%= commit.message %></li>
          <li><%= commit.date %></li>
          <li><%= commit.repository %></li>
        </ul>
      <% end %>
    </div>
  </aside>
</section>
